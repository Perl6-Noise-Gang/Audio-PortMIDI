#!perl6

use Audio::PortMIDI;

my $pm = Audio::PortMIDI.new;

my $i = $pm.default-input-device;

say $i.perl;


my $stream = $pm.open-input($i.device-id, 32);

say $pm.default-input-device;

loop {
    if $stream.poll {
        my @a = $stream.read(1);
        say @a[0];
    }

}

$stream.close;
# vim: expandtab shiftwidth=4 ft=perl6
